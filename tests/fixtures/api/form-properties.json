          {
            "id": "id",
            "type": "integer",
            "name": { "un": "id" },
            "description": { "un": "id" },
            "repeat": false,
            "range": [ -1e9999, 1e9999 ],
            "length": [ 1, 1e9999 ],
            "required": true,
            "conditions": {
              "operator": "&&",
              "javascript": {},
              "structured": { "name": "Human" }
            },
            "validations": {
              "operator": "&&",
              "javascript": {},
              "registered": {}
            }
          },
          {
            "id": "name",
            "type": "string",
            "name": { "un": "name" },
            "description": { "un": "name" },
            "repeat": false,
            "range": [ -1e9999, 1e9999 ],
            "length": [ 0, 1e9999 ],
            "required": false,
            "conditions": {
              "operator": "&&",
              "javascript": {},
              "structured": {}
            },
            "validations": {
              "operator": "&&",
              "javascript": {},
              "registered": {}
            }
          },
          {
            "id": "email",
            "type": "email",
            "name": { "un": "email" },
            "description": { "un": "email" },
            "repeat": false,
            "range": [ -1e9999, 1e9999 ],
