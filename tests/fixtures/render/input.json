[
  {
    "_name": "Unknown renderer",

    "form": {
      "meta": {
        "id": "form"
      },
      "fields": [{
        "id": "moniker",
        "name": "Patient Name",
        "type": "hoozit"
      }]
    },
    "expect": {
      "valid": false,
      "error": "No renderers could be found for: moniker"
    }
  },

  {
    "_name": "Unknown named renderer",

    "form": {
      "meta": {
        "id": "form"
      },
      "fields": [{
        "id": "moniker",
        "name": "Patient Name",
        "type": "string",
        "render": "hoozit"
      }]
    },
    "expect": {
      "valid": false,
      "error": "No renderers could be found for: moniker"
    }
  },

  {
    "_name": "Single string field",

    "form": {
      "meta": {
        "id": "form"
      },
      "fields": [{
        "id": "moniker",
        "name": "Patient Name",
        "type": "string"
      }]
    },
    "expect": {
      "valid": true,
      "result": "<form><field><id>moniker</id></field></form>"
    }
  },

  {
    "_name": "Single string field with validation error",

    "form": {
      "meta": {
        "id": "form"
      },
      "fields": [{
        "id": "moniker",
        "name": "Patient Name",
        "type": "string"
      }]
    },
    "values": {
      "moniker": ""
    },
    "validation": {
      "valid": false,
      "detail": {
        "moniker": {
          "valid": false,
          "error": "wrong"
        }
      }
    },
    "expect": {
      "valid": true,
      "result": "<form><field><error>wrong</error><id>moniker</id></field></form>"
    }
  },

  {
    "_name": "Single string field with value",

    "form": {
      "meta": {
        "id": "form"
      },
      "fields": [{
        "id": "moniker",
        "name": "Patient Name",
        "type": "string"
      }]
    },
    "values": {
      "moniker": "joe"
    },
    "validation": {
      "valid": true,
      "detail": {
        "moniker": {
          "valid": true
        }
      }
    },
    "expect": {
      "valid": true,
      "result": "<form><field><id>moniker</id><value>joe</value></field></form>"
    }
  },

  {
    "_name": "Single string field with default",

    "form": {
      "meta": {
        "id": "form"
      },
      "fields": [{
        "id": "moniker",
        "name": "Patient Name",
        "type": "string",
        "default": "jack"
      }]
    },
    "expect": {
      "valid": true,
      "result": "<form><field><id>moniker</id><value>jack</value></field></form>"
    }
  },

  {
    "_name": "Multiple string fields",

    "form": {
      "meta": {
        "id": "form"
      },
      "fields": [
        {
          "id": "moniker",
          "name": "Patient Name",
          "type": "string"
        },
        {
          "id": "prefix",
          "name": "Title",
          "type": "string"
        }
      ]
    },
    "expect": {
      "valid": true,
      "result": "<form><field><id>moniker</id></field><field><id>prefix</id></field></form>"
    }
  },

  {
    "_name": "Single textarea field",

    "form": {
      "meta": {
        "id": "form"
      },
      "fields": [{
        "id": "description",
        "name": "Description",
        "type": "string",
        "render": "textarea"
      }]
    },
    "expect": {
      "valid": true,
      "result": "<form><textarea><id>description</id></textarea></form>"
    }
  }
]