{
  "title": "Medic Mobile Form Definition Language",
  "$schema": "http://json-schema.org/draft-04/schema#",

  "description":
    "A schema for Medic Mobile's JSON-based form definition language",

  "type": "array",
  "minItems": 0,
  "uniqueItems": false,
  "items": { "$ref": "#/library/form" },

  "library": {

    "anything": {},

    "infinity": {
      "type": "number", "minimum": 1e9999
    },

    "omitted-value": {
      "type": [ "boolean", "null" ]
    },

    "unsupported": {
      "type": [ "boolean", "null" ]
    },

    "l10n": {
      "oneOf": [
        { "$ref": "#/library/l10n-object" },
        { "$ref": "#/library/l10n-string" }
      ]
    },

    "l10n-object": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^\\w{2}$": { "type": "string" }
      }
    },

    "l10n-string": {
      "type": "string"
    },

    "form": {
      "type": "object",
      "required": [ "meta" ],
      "additionalProperties": true,
      "properties": {
        "id": { "$ref": "#/library/form" },
        "meta": { "$ref": "#/library/meta" },
        "fields": { "$ref": "#/library/fieldset" }
      }
    },

    "meta": {
      "type": "object",
      "required": [ "id" ],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "name": { "$ref": "#/library/l10n" },
        "language": { "pattern": "^\\w{2}$" },
        "description": { "$ref": "#/library/l10n" }
      }
    },

    "fieldset": {
      "type": "array",
      "minItems": 0,
      "uniqueItems": false,
      "items": {
        "$ref": "#/library/field"
      }
    },

    "field": {
      "type": "object",
      "oneOf": [
        { "$ref": "#/library/field-string" },
        { "$ref": "#/library/field-integer" },
        { "$ref": "#/library/field-number" },
        { "$ref": "#/library/field-date" },
        { "$ref": "#/library/field-timestamp" },
        { "$ref": "#/library/field-gps" },
        { "$ref": "#/library/field-image" },
        { "$ref": "#/library/field-select" },
        { "$ref": "#/library/field-email" },
        { "$ref": "#/library/field-recursive" }
      ]
    },

    "field-string": {
      "type": "object",
      "required": [ "id", "type" ],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "required": { "$ref": "#/library/required" },
        "name": { "$ref": "#/library/l10n" },
        "description": { "$ref": "#/library/l10n" },
        "flags": { "$ref": "#/library/flags" },
        "conditions": { "$ref": "#/library/conditions" },
        "validations": { "$ref": "#/library/validations" },
        "repeat": { "$ref": "#/library/repeat-specifier" },
        "default": { "$ref": "#/library/anything" },
        "render": { "type": "string" },

        "type": { "enum": [ "string" ] },
        "range": { "$ref": "#/library/unsupported" },
        "length": { "$ref": "#/library/length-specifier" }
      }
    },

    "field-integer": {
      "type": "object",
      "required": [ "id", "type" ],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "required": { "$ref": "#/library/required" },
        "name": { "$ref": "#/library/l10n" },
        "description": { "$ref": "#/library/l10n" },
        "flags": { "$ref": "#/library/flags" },
        "conditions": { "$ref": "#/library/conditions" },
        "validations": { "$ref": "#/library/validations" },
        "repeat": { "$ref": "#/library/repeat-specifier" },
        "default": { "$ref": "#/library/anything" },
        "render": { "type": "string" },

        "type": { "enum": [ "integer" ] },
        "length": { "$ref": "#/library/length-specifier" },
        "range": { "$ref": "#/library/range-specifier-integer" }
      }
    },

    "field-number": {
      "type": "object",
      "required": [ "id", "type" ],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "required": { "$ref": "#/library/required" },
        "name": { "$ref": "#/library/l10n" },
        "description": { "$ref": "#/library/l10n" },
        "flags": { "$ref": "#/library/flags" },
        "conditions": { "$ref": "#/library/conditions" },
        "validations": { "$ref": "#/library/validations" },
        "repeat": { "$ref": "#/library/repeat-specifier" },
        "default": { "$ref": "#/library/anything" },
        "render": { "type": "string" },

        "type": { "enum": [ "number" ] },
        "length": { "$ref": "#/library/length-specifier" },
        "range": { "$ref": "#/library/range-specifier-number" }
      }
    },

    "field-date": {
      "type": "object",
      "required": [ "id", "type" ],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "required": { "$ref": "#/library/required" },
        "name": { "$ref": "#/library/l10n" },
        "description": { "$ref": "#/library/l10n" },
        "flags": { "$ref": "#/library/flags" },
        "conditions": { "$ref": "#/library/conditions" },
        "validations": { "$ref": "#/library/validations" },
        "repeat": { "$ref": "#/library/repeat-specifier" },
        "default": { "$ref": "#/library/anything" },
        "render": { "type": "string" },

        "type": { "enum": [ "date" ] },
        "range": { "$ref": "#/library/unsupported" },
        "repeat": { "$ref": "#/library/repeat-specifier" }
      }
    },

    "field-timestamp": {
      "type": "object",
      "required": [ "id", "type" ],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "required": { "$ref": "#/library/required" },
        "name": { "$ref": "#/library/l10n" },
        "description": { "$ref": "#/library/l10n" },
        "flags": { "$ref": "#/library/flags" },
        "conditions": { "$ref": "#/library/conditions" },
        "validations": { "$ref": "#/library/validations" },
        "repeat": { "$ref": "#/library/repeat-specifier" },
        "default": { "$ref": "#/library/anything" },
        "render": { "type": "string" },

        "type": { "enum": [ "timestamp" ] },
        "range": { "$ref": "#/library/unsupported" },
        "repeat": { "$ref": "#/library/repeat-specifier" }
      }
    },

    "field-image": {
      "type": "object",
      "required": [ "id", "type" ],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "required": { "$ref": "#/library/required" },
        "name": { "$ref": "#/library/l10n" },
        "description": { "$ref": "#/library/l10n" },
        "flags": { "$ref": "#/library/flags" },
        "conditions": { "$ref": "#/library/conditions" },
        "validations": { "$ref": "#/library/validations" },
        "repeat": { "$ref": "#/library/repeat-specifier" },
        "default": { "$ref": "#/library/anything" },
        "render": { "type": "string" },

        "type": { "enum": [ "image" ] },
        "range": { "$ref": "#/library/unsupported" }
      }
    },


    "field-gps": {
      "type": "object",
      "required": [ "id", "type" ],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "required": { "$ref": "#/library/required" },
        "name": { "$ref": "#/library/l10n" },
        "description": { "$ref": "#/library/l10n" },
        "conditions": { "$ref": "#/library/conditions" },
        "validations": { "$ref": "#/library/validations" },
        "repeat": { "$ref": "#/library/repeat-specifier" },
        "range": { "$ref": "#/library/range-specifier-number" },
        "default": { "$ref": "#/library/anything" },
        "render": { "type": "string" },

        "type": { "enum": [ "gps" ] },
        "range": { "$ref": "#/library/unsupported" },
        "elevation": { "type": [ "boolean", "null" ] }
      }
    },

    "field-select": {
      "type": "object",
      "required": [ "id", "type" ],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "required": { "$ref": "#/library/required" },
        "name": { "$ref": "#/library/l10n" },
        "description": { "$ref": "#/library/l10n" },
        "flags": { "$ref": "#/library/flags" },
        "conditions": { "$ref": "#/library/conditions" },
        "validations": { "$ref": "#/library/validations" },
        "repeat": { "$ref": "#/library/repeat-specifier" },
        "default": { "$ref": "#/library/anything" },
        "render": { "type": "string" },

        "type": { "enum": [ "select" ] },
        "range": { "$ref": "#/library/range-specifier-integer" },

        "items": {
          "type": "array",
          "items": {
            "oneOf": [
              { "type": "integer" },
              { "$ref": "#/library/l10n" },
              { "$ref": "#/library/script-specifier" },
              {
                "type": "array",
                "minItems": 1,
                "maxItems": 2,
                "items": [
                  { "type": [ "integer", "string" ] },
                  { "$ref": "#/library/l10n" }
                ]
              }
            ]
          }
        }
      }
    },

    "field-recursive": {
      "type": "object",
      "required": [ "id", "type" ],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "required": { "$ref": "#/library/required" },
        "name": { "$ref": "#/library/l10n" },
        "description": { "$ref": "#/library/l10n" },
        "flags": { "$ref": "#/library/flags" },
        "conditions": { "$ref": "#/library/conditions" },
        "validations": { "$ref": "#/library/validations" },
        "repeat": { "$ref": "#/library/repeat-specifier" },
        "default": { "$ref": "#/library/anything" },
        "render": { "type": "string" },

        "type": { "enum": [ "fields" ] },
        "fields": { "$ref": "#/library/fieldset" },
        "range": { "$ref": "#/library/unsupported" }
      }
    },

    "field-email": {
      "type": "object",
      "required": [ "id", "type" ],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "required": { "$ref": "#/library/required" },
        "name": { "$ref": "#/library/l10n" },
        "description": { "$ref": "#/library/l10n" },
        "flags": { "$ref": "#/library/flags" },
        "conditions": { "$ref": "#/library/conditions" },
        "validations": { "$ref": "#/library/validations" },
        "repeat": { "$ref": "#/library/repeat-specifier" },
        "default": { "$ref": "#/library/anything" },
        "render": { "type": "string" },

        "type": { "enum": [ "email" ] },
        "range": { "$ref": "#/library/unsupported" },
        "length": { "$ref": "#/library/length-specifier" }
      }
    },

    "script-specifier": {
      "oneOf": [
        {
          "type": "object",
          "required": [ "javascript" ],
          "additionalProperties": false,
          "properties": {
            "javascript": {
              "type": [ "string", "object" ]
            }
          }
        }
      ]
    },

    "operator-specifier": {
      "type": "string",
      "enum": [ "&&", "||" ]
    },

    "length-specifier": {
      "oneOf": [
        { "type": "integer", "minimum": 0 },
        { "$ref": "#/library/omitted-value" },
        { "$ref": "#/library/script-specifier" },
        {
          "type": "array",
          "uniqueItems": false,
          "minItems": 1, "maxItems": 2,
          "items": {
            "oneOf": [
              { "$ref": "#/library/infinity" },
              { "type": "integer", "minimum": 0 },
              { "$ref": "#/library/omitted-value" }
            ]
          }
        }
      ]
    },

    "repeat-specifier": {
      "oneOf": [
        { "$ref": "#/library/omitted-value" },
        { "type": "integer", "minimum": 0 },
        { "$ref": "#/library/script-specifier" },
        {
          "type": "array",
          "uniqueItems": false,
          "minItems": 1, "maxItems": 2,
          "items": {
            "oneOf": [
              { "$ref": "#/library/infinity" },
              { "type": "integer", "minimum": 0 },
              { "$ref": "#/library/omitted-value" }
            ]
          }
        }
      ]
    },

    "range-specifier-integer": {
      "oneOf": [
        { "type": "integer" },
        { "$ref": "#/library/script-specifier" },
        {
          "type": "array",
          "uniqueItems": false,
          "minItems": 1, "maxItems": 2,
          "items": {
            "oneOf": [
              { "type": "integer" },
              { "$ref": "#/library/infinity" },
              { "$ref": "#/library/omitted-value" }
            ]
          }
        }
      ]
    },

    "range-specifier-number": {
      "oneOf": [
        { "type": "number" },
        { "$ref": "#/library/script-specifier" },
        {
          "type": "array",
          "uniqueItems": false,
          "minItems": 1, "maxItems": 2,
          "items": {
            "oneOf": [
              { "type": "number" },
              { "$ref": "#/library/infinity" },
              { "$ref": "#/library/omitted-value" }
            ]
          }
        }
      ]
    },

    "flags": {
      "type": "object",
      "patternProperties": {
        "^.+$": { "type": "boolean" }
      }
    },

    "required": {
      "oneOf": [
        { "type": "boolean" },
        { "$ref": "#/library/script-specifier" }
      ]
    },

    "conditions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "operator": {
          "$ref": "#/library/operator-specifier"
        },
        "javascript": {
          "type": [ "string", "object" ]
        },
        "structured": {
          "type": [ "string", "object" ]
        },
        "registered": {
          "type": [ "string", "object" ]
        }
      }
    },

    "validations": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "operator": {
          "$ref": "#/library/operator-specifier"
        },
        "javascript": {
          "type": [ "string", "object" ]
        },
        "registered": {
          "type": [ "string", "object" ]
        }
      }
    }
  }
}

